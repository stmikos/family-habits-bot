# TELEGRAM BOT CONFIGURATION
# Получите токен у @BotFather в Telegram
TELEGRAM_BOT_TOKEN=your_bot_token_here

# WEBAPP CONFIGURATION  
# URL где запущен ваш webapp
WEBAPP_URL=https://your-app-name.onrender.com
# Альтернативы:
# WEBAPP_URL=https://your-app-name.up.railway.app
# WEBAPP_URL=https://your-app-name.herokuapp.com
# WEBAPP_URL=https://your-codespace-name-8000.app.github.dev

# CLOUD HOSTING CONFIGURATION
# Порт для облачных платформ (автоматически устанавливается)
PORT=8000

# DATABASE CONFIGURATION
DATABASE_URL=sqlite:///family_habits.db

# LOGGING CONFIGURATION
LOG_LEVEL=INFO
LOG_FILE=logs/bot.log

# Примеры заполнения:
# TELEGRAM_BOT_TOKEN=1234567890:ABCdefGHIjklMNOpqrsTUVwxyz
# WEBAPP_URL=https://family-habits-bot.onrender.com